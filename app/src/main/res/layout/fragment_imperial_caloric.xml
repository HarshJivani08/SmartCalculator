<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_page_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/constraint_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:outlineAmbientShadowColor="@color/shadow_color"
                android:outlineSpotShadowColor="@color/shadow_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/input_card"
                    android:id="@+id/input_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latobold"
                        android:gravity="center"
                        android:text="@string/input_value"
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/_18sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/gender_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/latosemibold"
                        android:gravity="start"
                        android:paddingTop="@dimen/_20sdp"
                        android:text="@string/select_gender"
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintTop_toBottomOf="@+id/text_label" />

                    <RadioGroup
                        android:id="@+id/radio_gp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/gender_text">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Male"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Female"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/initial_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:boxStrokeWidthFocused="@dimen/_1dp"
                         android:textColorHint="@color/text_hint_color"
                        app:boxBackgroundColor="@color/bg_edit_color"
                        app:layout_constraintTop_toBottomOf="@+id/radio_gp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:hint="@string/age"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="@dimen/_15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/initial_layout">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/height_ft_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                             android:textColorHint="@color/text_hint_color"
                            app:boxBackgroundColor="@color/bg_edit_color"
                            app:boxStrokeWidthFocused="@dimen/_1dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/height_ft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/latoregular"
                                android:hint="@string/height_ft"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="@dimen/_15sp" />


                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/secondary_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                             android:textColorHint="@color/text_hint_color"
                            app:boxBackgroundColor="@color/bg_edit_color"
                            app:boxStrokeWidthFocused="@dimen/_1dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_in"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/latoregular"
                                android:hint="@string/bmi_inch"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="@dimen/_15sp" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/third_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:boxStrokeWidthFocused="@dimen/_1dp"
                         android:textColorHint="@color/text_hint_color"
                        app:boxBackgroundColor="@color/bg_edit_color"
                        app:layout_constraintTop_toBottomOf="@+id/linear">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:hint="@string/weight_kg"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="@dimen/_15sp" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/lifestyle_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/latosemibold"
                        android:gravity="start"
                        android:paddingTop="@dimen/_20sdp"
                        android:text="@string/choose_lifestyle"
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintTop_toBottomOf="@+id/third_layout" />

                    <RadioGroup
                        android:id="@+id/radio_lifestyle_gp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/lifestyle_text">

                        <RadioButton
                            android:id="@+id/sedentary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Sedentary"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>

                        <RadioButton
                            android:id="@+id/light_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Lightly Active"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>

                        <RadioButton
                            android:id="@+id/moderately_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Moderately Active"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>


                        <RadioButton
                            android:id="@+id/very_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latoregular"
                            android:text="Very Active"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_15sp"
                            android:buttonTint="@color/radio_btn_color"/>

                    </RadioGroup>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/radio_lifestyle_gp">

                        <TextView
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/clear_c2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/latomedium"
                            android:gravity="center"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:text="@string/clear"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/calculate_c1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/latomedium"
                            android:gravity="center"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:singleLine="true"
                            android:text="@string/calculate"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/constraint_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:outlineAmbientShadowColor="@color/shadow_color"
                android:outlineSpotShadowColor="@color/shadow_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_input">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/input_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_constraint">

                    <TextView
                        android:id="@+id/text_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latobold"
                        android:gravity="center"
                        android:text="@string/result"
                        android:textColor="@color/text_label"
                        android:textSize="@dimen/_18sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/final_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:boxStrokeWidthFocused="@dimen/_1dp"
                         android:textColorHint="@color/text_hint_color"
                        app:boxBackgroundColor="@color/bg_edit_color"
                        app:layout_constraintTop_toBottomOf="@+id/text_result">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:editable="false"
                            android:focusable="true"
                            android:fontFamily="@font/latoregular"
                            android:hint="@string/calories"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="@dimen/_15sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>